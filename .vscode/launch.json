{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "sourceMaps": true,
      "runtimeArgs": [
        "-i"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceRoot}/dist/**/*"
      ],
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Web",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceFolder}/examples/index.html"
    }
  ]
}